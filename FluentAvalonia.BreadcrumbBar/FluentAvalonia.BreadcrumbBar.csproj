<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>FluentAvalonia</RootNamespace>
    <LangVersion>latest</LangVersion>

    <RepositoryUrl>https://github.com/indigo-san/FluentAvalonia.BreadcrumbBar</RepositoryUrl>
    <PackageId>FluentAvalonia.BreadcrumbBar</PackageId>
    <Description>Control library which adds a WinUI BreadcrumbBar to the FluentAvalonia package</Description>
    <PackageTags>c-sharp;xaml;cross-platform;dotnet;dotnetcore;avalonia;avaloniaui;fluent;fluent-design</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>2.0.0-preview2</Version>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <Authors>https://github.com/indigo-san</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentAvaloniaUI" Version="2.0.0-preview3" />
  </ItemGroup>

</Project>
